# Window borders
    client.focused          #9ccfd8 #9ccfd8 #191724 #9ccfd8   #9ccfd8
    client.focused_inactive #524f67 #191724 #524f67 #191724   #191724
    client.unfocused        #26233a #191724 #908caa #191724   #191724
    client.urgent           #191724 #eb6f92 #191724 #eb6f92   #eb6f92
    client.placeholder      #191724 #191724 #9ccfd8 #111111   #111111
    client.background       #191724 #191724

include /etc/sway/config.d/*
